{
  "$schema": "https://platformatic.dev/schemas/v0.26.1/composer",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "composer": {
    "services": [
      {
        "id": "marketing-website",
        "origin": "{PLT_MARKETING_WEBSITE_ORIGIN}",
        "openapi": {
          "url": "/documentation/json"
        }
      },
      {
        "id": "membership-kiosk",
        "origin": "{PLT_MEMBERSHIP_KIOSK_ORIGIN}",
        "openapi": {
          "url": "/documentation/json"
        }
      },
      {
        "id": "database-one",
        "origin": "{PLT_DATABASE_ONE_ORIGIN}",
        "openapi": {
          "url": "/documentation/json"
        }
      },
      {
        "id": "database-two",
        "origin": "{PLT_DATABASE_TWO_ORIGIN}",
        "openapi": {
          "url": "/documentation/json"
        }
      }
    ],
    "refreshTimeout": 1000
  },
  "watch": true
}
