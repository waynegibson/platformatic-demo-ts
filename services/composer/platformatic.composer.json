{
  "$schema": "https://platformatic.dev/schemas/v0.26.1/composer",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "composer": {
    "services": [
      {
        "id": "database-one",
        "openapi": {
          "url": "/documentation/json"
        }
      },
      {
        "id": "service-auth",
        "openapi": {
          "prefix": "/auth",
          "url": "/documentation/json"
        }
      },
      {
        "id": "service-membership",
        "openapi": {
          "prefix": "/membership",
          "url": "/documentation/json"
        }
      }
    ],
    "refreshTimeout": 1000
  },
  "watch": true
}
